/* miniprogram/pages/home/messageDetail/messageDetail.wxss */
.foundation-msg-wrapper{
  padding:10rpx 0 300rpx 0;
}
.message-item{
  padding:12rpx 0 36rpx 11rpx;
  margin:36rpx 0;
  border-bottom:1px dashed #999;
}
.message-item:last-child{
  border:0;
}
.message-item .from-type-name{
   color:#1e8a02;
   margin-left:6rpx;
}

.message-item .status-text{
  float:right;
  margin-right:12rpx;
}

.message-item .msg-main{
    padding:36rpx 0;
    text-indent:1rem;
}
.msg-footer{
  color:#999;
  font-size:0.6rem;
}
