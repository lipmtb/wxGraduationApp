/* pages/service/service.wxss */
.wrapper {
  padding: 10rpx 0 300rpx 0;
  text-align: center;
}

/* 时间日期 */
.location-time-weather {
  overflow: hidden;
}

.location-time {
  float: left;
}

.location-weather {
  position: relative;
  float: right;
  width:320rpx;
  height:400rpx;
}

/* 日期canvas */
#da-time-canvas {
  width: 320rpx;
  height: 200rpx;
}
/* 天气icon */
.wea-stat-icon{
  position: absolute;
  width:110rpx;
  height:110rpx;
  left:-20rpx;
  top:20rpx;
}
/* 天气canvas */
