/* pages/talk/talkcpn/talk-item.wxss */
.singleTalkWrapper{
  padding:20rpx 0;

}
/* 顶部热门详情 */
.singleTalkWrapper .topView{
  position: relative;
  font-size:30rpx;
}


.topView .top-detail-anchor{
  position:absolute;
  right:36rpx;
  top:0;
}

.topView .top-detail-icon{
  position:absolute;
  right:8rpx;
  top:0;
}
.mainView{
  margin:10rpx;
  padding-bottom:32rpx;
  border-bottom-style:solid;
  border-bottom-width:1px;
  border-bottom-color:#ccc;
}

/* 内容左侧容器 */
.mainView .main-left{
 height:200rpx;

}
/* 标题 */
.mainView .main-left .main-title{
  height:80%;
  font-size:2rem;
  text-align:center;
  line-height:200rpx;
  overflow:hidden;
}
.mainView .main-left .title-foot{
  overflow:auto;  
  font-size:28rpx;
}

/* 用户信息 */
.mainView .main-left .title-foot .foot-item:first-child{
  float:left;
}

/* 用户头像 */
.title-foot .foot-item:first-child .user-avatar-icon{
  width:48rpx;
  height:48rpx;
  border-radius:50%;

}
/* 用户昵称 */
.title-foot .foot-item:first-child .user-nick-name{
  vertical-align: 12rpx;
  margin-left:12rpx;
}

/* 评论和点赞 */
.mainView .main-left .title-foot .foot-item+view.foot-item{
  float:right;
  padding:0 20rpx;
  margin-top:20rpx;
}
.title-foot .foot-item .count-text{
  margin-left:6rpx;
  vertical-align: 4rpx;
}

/* 右侧图片区域view */
.mainView .main-right{
  float:right;
  
  font-size:0;
 }
/* 图片 */
 .mainView .main-right image.firstImg{
    width:240rpx;
    height:200rpx;
   
 }

 .comment-view{
   margin-top:10rpx;
 }

 .related-text{
   font-size:0.8rem;
   color:#929694;
 }

 .re-content-view{
   text-indent: 1rem;
 }
 .comment-item-view{
  text-indent: 1rem;
 }